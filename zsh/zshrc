alias gc="git commit -am"
alias ga="git add ."
alias gs="git status"
alias gpo='git pull origin "$(git rev-parse --abbrev-ref HEAD)"'
alias kclean="find . -name '*.orig' -delete "
alias üí©="rm -rf ./node_modules && npm cache clean && npm install"
